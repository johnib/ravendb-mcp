{
  "name": "ravendb-mcp",
  "version": "0.0.1",
  "description": "MCP Server for interacting with RavenDB",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ravendb-mcp": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bugs": "https://github.com/johnib/ravendb-mcp/issues",
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm --experimental-specifier-resolution=node src/index.ts",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --config .prettierrc.json --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "lru-cache": "^9.1.1",
    "ravendb": "^5.4.3",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.20.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.7.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
